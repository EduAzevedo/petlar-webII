@page
@{
    ViewData["Title"] = "PetLar";

    var availableAnimals = new List<dynamic>
    {
        new { Id = 1, Name = "Rex", Species = "Cachorro", Breed = "Labrador", Age = 3, Description = "Cachorro amigável e brincalhão", IsAdopted = false, ImageUrl = "/images/animal-1.jpeg" },
        new { Id = 2, Name = "Luna", Species = "Gato", Breed = "Siamês", Age = 2, Description = "Gata tranquila e carinhosa", IsAdopted = true, ImageUrl = "/images/animal-4.jpeg" },
        new { Id = 3, Name = "Bob", Species = "Gato", Breed = "Persa", Age = 1, Description = "Gato atentado e comilão", IsAdopted = false, ImageUrl = "/images/animal-3.jpeg" }
    };

    var partnerONGs = new List<dynamic>
    {
        new { Name = "Amigos dos Animais", Description = "ONG dedicada ao resgate e cuidado de animais abandonados." },
        new { Name = "Patinhas Felizes", Description = "Trabalhamos para encontrar lares amorosos para animais de rua."},
        new { Name = "Vida Animal", Description = "Promovemos o bem-estar animal através de campanhas de adoção e conscientização." }
    };
}

<div class="hero">
    <div class="hero-text">
        <h1>Bem-vindo ao PetLar!</h1>
    </div>
</div>

<div class="container">
    <section class="available-animals-section">
        <h2>Animais Disponíveis para Adoção</h2>
        <p>Conheça nossos adoráveis animais esperando por um novo lar.</p>
        <div class="animal-items">
            @foreach (var animal in availableAnimals)
            {
                <div class="animal-item">
                    <img src="@animal.ImageUrl" alt="Imagem de @animal.Name" class="animal-image" />
                    <div class="animal-info">
                        <h3>@animal.Name</h3>
                        <p>@animal.Description</p>
                        <a href="javascript:void(0);" class="btn-view" onclick="openModal(@animal.Id)">Saiba Mais</a>
                    </div>
                </div>
            }
        </div>
        <div class="btn-container">
            <a href="/Animals" class="btn-secondary">Ver Todos os Animais</a>
        </div>
    </section>

    <section class="partner-ongs-section">
        <h2>Nossas ONGs Parceiras</h2>
        <p>Conheça as ONGs que colaboram conosco para o resgate e adoção de animais.</p>
        <div class="partner-items">
            @foreach (var ong in partnerONGs)
            {
                <div class="partner-item">
                    <h3>@ong.Name</h3>
                    <p>@ong.Description</p>
                    <a href="/" class="btn-visit">Ver Perfil</a>
                </div>
            }
        </div>
    </section>
</div>

<div id="animalModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <img id="modalImage" src="" alt="Imagem do Animal" class="modal-image" />
        </div>
        <h3 id="modalName"></h3>
            <p id="modalDescription"></p>
        <div class="modal-body">
            <div class="modal-body-item">

            <p><strong>Raça:</strong> <span id="modalBreed"></span></p>
            </div>
            <div class="modal-body-item">
            <p><strong>Idade:</strong> <span id="modalAge"></span></p>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" id="whatsappLink" target="_blank" class="btn-whatsapp">
                <img src="/images/whatsapp-icon.png" alt="WhatsApp" /> Contatar pelo WhatsApp
            </a>
        </div>
    </div>
</div>

<script>
    const animals = [
        { id: 1, name: "Rex",  breed: "Labrador", age: 3, description: "Cachorro amigável e brincalhão", imageUrl: "/images/animal-1.jpeg" },
        { id: 2, name: "Luna", breed: "Siamês", age: 2, description: "Gata tranquila e carinhosa", imageUrl: "/images/animal-4.jpeg" },
        { id: 3, name: "Bob", breed: "Persa", age: 1, description: "Gato atentado e comilão", imageUrl: "/images/animal-3.jpeg" }
    ];

    function openModal(id) {
        const animal = animals.find(animal => animal.id === id);

        if (animal) {
            document.getElementById('modalName').innerText = animal.name;
           
            document.getElementById('modalBreed').innerText = animal.breed;
            document.getElementById('modalAge').innerText = animal.age + ' ano(s)';
            document.getElementById('modalDescription').innerText = animal.description;
            document.getElementById('modalImage').src = animal.imageUrl;

            const whatsappLink = document.getElementById('whatsappLink');
            whatsappLink.href = `https://wa.me/+5579999759461?text=Ol%C3%A1,%20me%20interessei%20pelo%20pet%20${encodeURIComponent(animal.name)},%20ainda%20est%C3%A1%20dispon%C3%ADvel%20para%20ado%C3%A7%C3%A3o?`;

            document.getElementById('animalModal').style.display = 'block';
        }
    }

    function closeModal() {
        document.getElementById('animalModal').style.display = 'none';
    }

    window.onclick = function (event) {
        const modal = document.getElementById('animalModal');
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>

