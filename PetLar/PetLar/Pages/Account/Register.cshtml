@page
@model RegisterModel
@{
    ViewData["Title"] = "PETLAR - Registro de Usuário";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 2rem;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            max-width: 500px;
            margin: 2rem auto;
        }

        .form-title {
            margin-bottom: 1.5rem;
        }

        .form-control {
            border-radius: 16px;
            padding: 10px 15px;
            font-size: 16px;
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                border-color: #FE7370;
                box-shadow: 0 0 0 0.2rem rgba(254, 115, 112, 0.25);
            }

        .btn-custom {
            background-color: #FE7370;
            color: white;
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

            .btn-custom:hover {
                background-color: #e85a4f;
            }

        .login-link {
            text-align: center;
            margin-top: 1rem;
        }

            .login-link a {
                color: #FE7370;
                text-decoration: none;
                font-weight: bold;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <h2 class="form-title text-center">Registro de Usuário</h2>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="user.UserName" class="form-label">Nome</label>
                    <input type="text" id="name" asp-for="user.UserName"x class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="user.Email" class="form-label">E-mail</label>
                    <input type="email" id="email" asp-for="user.Email" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="user.Password" class="form-label">Senha</label>
                    <input type="password" id="password" asp-for="user.Password" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="user.Password" class="form-label">Confirmar Senha</label>
                    <input type="password" id="confirm-password" asp-for="user.Password" class="form-control" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-custom">Registrar</button>
                </div>
            </form>

            <div class="login-link">
                <p>J� possui uma conta? <a href="/account/login">Fa�a login aqui</a></p>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>
